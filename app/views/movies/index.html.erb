<h1>Rotten Mangoes</h1>
<%= link_to "Submit a movie!", new_movie_path %>

<hr>

<h4> Search for movies! </h4>

<%= form_tag(movies_path, method: :get) do %>
  <div>
    <%= label_tag :title %><br/>
    <%= text_field_tag :title %>
  </div>
  <div>
    <%= label_tag :director %><br/>
    <%= text_field_tag :director %>
  </div>
  <div>
    <%= radio_button_tag(:runtime_in_minutes, 1) %>
    <%= label_tag(:runtime_in_minutes, "Under 90 minutes") %>
    <%= radio_button_tag(:runtime_in_minutes, 2) %>
    <%= label_tag(:runtime_in_minutes, "Between 90 and 120 minutes") %>
    <%= radio_button_tag(:runtime_in_minutes, 3) %>
    <%= label_tag(:runtime_in_minutes, "Over 120 minutes") %>
  </div>
  <div><%= submit_tag "Search!" %></div>
<% end %>

<hr>
<% @movies.each do |movie| %>
  <%= link_to image_tag(movie.poster.url), movie_path(movie) %>
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <h3><%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <% if movie.review_average %><p>Average rating: <%= movie.review_average %>/10</p><% end %>
  <p><%= movie.description %></p>
  <hr>
<% end %>

